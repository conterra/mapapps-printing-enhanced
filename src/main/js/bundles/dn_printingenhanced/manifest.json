{
    "name": "dn_printingenhanced",
    "version": "1.1.5",
    "title": "${bundleName}",
    "description": "${bundleDescription}",
    "vendor": "con terra GmbH",
    "keywords": [
        "print",
        "AGS"
    ],
    "icon": {},
    "license": {},
    "productName": "devnet-mapapps-printing-enhanced",
    "dependencies": {
        "esri": "^4.5.0",
        "apprt-vue": "^4.5.0",
        "apprt-vuetify": "^4.5.0",
        "apprt-binding": "^4.5.0",
        "apprt-core": "^4.5.0",
        "printing": "^4.5.0",
        "coordinatetransformer": "^4.5.0"
    },
    "CSS-Themes-Extension": [
        {
            "name": "*",
            "files": [
                "./css/styles.css"
            ]
        }
    ],
    "layout-widgets": [
        {
            "widgetRole": "printingEnhancedWidget",
            "sublayout": [
                "desktop"
            ],
            "window": {
                "title": "${windowTitle}",
                "dockTool": "printingEnhancedToggleTool",
                "closable": true,
                "maximizable": false,
                "minimizeOnClose": true,
                "resizable": true,
                "marginBox": {
                    "w": 435,
                    "h": 550,
                    "t": 125,
                    "l": 20
                },
                "minSize": {
                    "w": 300,
                    "h": 480
                },
                "windowClass": "printing-enhanced-widget"
            }
        },
        {
            "widgetRole": "printingEnhancedWidget",
            "sublayout": [
                "tablet_landscape",
                "tablet_portrait"
            ],
            "window": {
                "title": "${windowTitle}",
                "dockTool": "printingEnhancedToggleTool",
                "closable": true,
                "maximizable": false,
                "minimizeOnClose": true,
                "resizable": false,
                "draggable": false,
                "marginBox": {
                    "w": 300,
                    "h": 480,
                    "t": 125,
                    "l": 20
                },
                "windowClass": "printing-enhanced-widget"
            }
        },
        {
            "widgetRole": "printingEnhancedWidget",
            "sublayout": [
                "mobile_landscape",
                "mobile_portrait"
            ],
            "window": {
                "title": "${windowTitle}",
                "dockTool": "printingEnhancedToggleTool",
                "dockable": true,
                "dockingBar": "${id}-dockingBarBottomLeft",
                "closable": true,
                "maximizable": false,
                "minimizeOnClose": true,
                "resizable": false,
                "marginBox": {
                    "w": "100%",
                    "h": "100%",
                    "b": 0
                },
                "windowClass": "printing-enhanced-widget"
            }
        }
    ],
    "components": [
        {
            "name": "PrintingPreviewController",
            "immediate": true,
            "provides": [
                "dn_printingenhanced.PrintingPreviewController"
            ],
            "properties": {},
            "references": [
                {
                    "name": "_printingWidget",
                    "providing": "dijit.Widget",
                    "filter": "(widgetRole=printing)"
                },
                {
                    "name": "_printingEnhancedProperties",
                    "providing": "dn_printingenhanced.PrintingEnhancedProperties"
                },
                {
                    "name": "_printingInfosAnalyzer",
                    "providing": "dn_printingenhanced.PrintingInfosAnalyzer"
                },
                {
                    "name": "_printingPreviewDrawer",
                    "providing": "dn_printingenhanced.PrintingPreviewDrawer",
                    "cardinality": "0..1"
                },
                {
                    "name": "printingToggleTool",
                    "providing": "ct.tools.Tool",
                    "filter": "(id=printingToggleTool)",
                    "cardinality": "0..1"
                },
                {
                    "name": "printingEnhancedToggleTool",
                    "providing": "ct.tools.Tool",
                    "filter": "(id=printingEnhancedToggleTool)",
                    "cardinality": "0..1"
                },
                {
                    "name": "mapWidgetModel",
                    "providing": "map-widget.MapWidgetModel"
                },
                {
                    "name": "_logger",
                    "providing": "ct.framework.api.LogService",
                    "cardinality": "0..1"
                }
            ]
        },
        {
            "name": "Config",
            "impl": "ct/Stateful",
            "provides": [
                "dn_printingenhanced.PrintingEnhancedProperties"
            ],
            "propertiesConstructor": true,
            "properties": {
                "showPrintPreview": true,
                "showAdvancedOptions": true,
                "showDpiSelect": true,
                "layoutTemplatesInfoTaskName": "Get Layout Templates Info Task",
                "defaultPageUnit": "CENTIMETER",
                "defaultFormat": "PDF",
                "defaultTemplate": "A4 Portrait",
                "defaultDpi": 96,
                "dpiValues": [
                    {
                        "value": 96,
                        "text": "96"
                    },
                    {
                        "value": 150,
                        "text": "150"
                    },
                    {
                        "value": 300,
                        "text": "300"
                    }
                ],
                "hideFormats": [],
                "hideTemplates": [],
                "printingPreviewSymbol": {
                    "type": "simple-fill",
                    "color": [
                        255,
                        0,
                        0,
                        0.25
                    ],
                    "style": "solid",
                    "outline": {
                        "color": [
                            255,
                            0,
                            0,
                            1
                        ],
                        "width": "2px"
                    }
                },
                "useUsernameAsAuthor": true,
                "usernameAttributes": [
                    "givenname",
                    "sn"
                ],
                "customTextElements": [],
                "allowSketching": false
            }
        },
        {
            "name": "PrintingPropertiesOverWriter",
            "immediate": true,
            "provides": [
                "dn_printingenhanced.PrintingPropertiesOverWriter"
            ],
            "references": [
                {
                    "name": "_printingWidget",
                    "providing": "dijit.Widget",
                    "filter": "(widgetRole=printing)"
                },
                {
                    "name": "_printingEnhancedProperties",
                    "providing": "dn_printingenhanced.PrintingEnhancedProperties"
                },
                {
                    "name": "userService",
                    "providing": "ct.framework.api.UserAdmin",
                    "cardinality": "0..1"
                }
            ]
        },
        {
            "name": "PrintingInfosAnalyzer",
            "provides": [
                "dn_printingenhanced.PrintingInfosAnalyzer"
            ],
            "references": [
                {
                    "name": "_printingEnhancedProperties",
                    "providing": "dn_printingenhanced.PrintingEnhancedProperties"
                }
            ]
        },
        {
            "name": "PrintingPreviewDrawer",
            "provides": [
                "dn_printingenhanced.PrintingPreviewDrawer"
            ],
            "references": [
                {
                    "name": "_mapWidgetModel",
                    "providing": "map-widget.MapWidgetModel"
                },
                {
                    "name": "_coordinateTransformer",
                    "providing": "ct.api.coordinatetransformer.CoordinateTransformer"
                },
                {
                    "name": "_printingEnhancedProperties",
                    "providing": "dn_printingenhanced.PrintingEnhancedProperties"
                },
                {
                    "name": "_eventService",
                    "providing": "ct.framework.api.EventService"
                }
            ]
        },
        {
            "name": "PrintingEnhancedWidgetFactory",
            "provides": [
                "dijit.Widget"
            ],
            "instanceFactory": true,
            "properties": {
                "widgetRole": "printingEnhancedWidget"
            },
            "references": [
                {
                    "name": "_printingWidget",
                    "providing": "dijit.Widget",
                    "filter": "(widgetRole=printing)"
                },
                {
                    "name": "_printingInfosAnalyzer",
                    "providing": "dn_printingenhanced.PrintingInfosAnalyzer"
                },
                {
                    "name": "_printingPreviewController",
                    "providing": "dn_printingenhanced.PrintingPreviewController"
                },
                {
                    "name": "_printingEnhancedProperties",
                    "providing": "dn_printingenhanced.PrintingEnhancedProperties"
                }
            ]
        },
        {
            "name": "PrintingEnhancedToggleTool",
            "impl": "ct/tools/Tool",
            "provides": [
                "ct.tools.Tool"
            ],
            "propertiesConstructor": true,
            "properties": {
                "id": "printingEnhancedToggleTool",
                "title": "${tool.title}",
                "tooltip": "${tool.tooltip}",
                "iconClass": "icon-print",
                "toolRole": "toolset",
                "togglable": true,
                "rules": {
                    "noGroup": true
                }
            }
        },
        {
            "name": "PrintingToggleToolHandler",
            "references": [
                {
                    "name": "_configAdminService",
                    "providing": "ct.framework.api.ConfigurationAdmin"
                }
            ]
        },
        {
            "name": "PrintViewModelPatch",
            "provides": [
                "ct.framework.api.EventHandler",
                "dn_printingenhanced.PrintViewModelPatch"
            ],
            "properties": {
                "Event-Topics": [
                    {
                        "topic": "dn_printingenhanced/PRINTSETTINGS",
                        "method": "setPrintSettings"
                    },
                    {
                        "topic": "dn_printingenhanced/CUSTOM_TEXTELEMENTS",
                        "method": "setCustomTextElements"
                    }
                ]
            },
            "references": [
                {
                    "name": "_printingEnhancedProperties",
                    "providing": "dn_printingenhanced.PrintingEnhancedProperties"
                },
                {
                    "name": "userService",
                    "providing": "ct.framework.api.UserAdmin",
                    "cardinality": "0..1"
                }
            ]
        }
    ]
}
